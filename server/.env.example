# Apsara Report backend environment example
# Copy this file to `.env` and fill values for your environment.

# Server
PORT=5000
NODE_ENV=development
REQUEST_SIZE_LIMIT=15mb

# MongoDB URIs (primary is required)
MONGODB_URI_PRIMARY=mongodb://localhost:27017/apsara_primary
MONGODB_URI_SECONDARY=
MONGODB_URI_TERTIARY=
MONGODB_URI_ARCHIVE=
MONGODB_URI_IMAGES=
MONGODB_URI_ROLES=

# Optional DB name overrides used for image/role clusters
MONGODB_IMAGE_DB_NAME=apsara_images
MONGODB_ROLE_DB_NAME=apsara_roles

# Cluster settings
CLUSTER_STORAGE_LIMIT_MB=512
CLUSTER_SERVER_SELECTION_TIMEOUT_MS=10000
CLUSTER_MAX_POOL_SIZE=10

# Storage thresholds (percent values)
STORAGE_THRESHOLD_SWITCH=90
STORAGE_THRESHOLD_CRITICAL=75
STORAGE_THRESHOLD_WARNING=50

# Archiving
ARCHIVE_AFTER_DAYS=180
ARCHIVE_BATCH_LIMIT=100
AUTO_ARCHIVE_ENABLED=false

# Authentication / Roles
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_DISPLAY_NAME=Administrator
DEFAULT_ADMIN_PASSWORD=@dminpanel
AUTH_PASSWORD_SALT_ROUNDS=10
AUTH_SESSION_TTL_MINUTES=60
AUTH_SESSION_SWEEP_MINUTES=15

# Other
CLUSTER_STORAGE_LIMIT_MB=512
