PORT=5000
NODE_ENV=development

# Primary cluster (required)
MONGODB_URI_PRIMARY=your_primary_connection_string

# Secondary cluster (optional)
MONGODB_URI_SECONDARY=

# Tertiary cluster (optional)
MONGODB_URI_TERTIARY=

# Archive cluster (optional)
MONGODB_URI_ARCHIVE=

# Dedicated image storage cluster (optional)
MONGODB_URI_IMAGES=
MONGODB_IMAGE_DB_NAME=apsara_image

# Dedicated role directory cluster (optional)
MONGODB_URI_ROLES=
MONGODB_ROLE_DB_NAME=apsara_role

# Storage thresholds (percent values)
STORAGE_THRESHOLD_WARNING=55
STORAGE_THRESHOLD_CRITICAL=75
STORAGE_THRESHOLD_SWITCH=90
CLUSTER_STORAGE_LIMIT_MB=512
REQUEST_SIZE_LIMIT=15mb

# Archiving rules
AUTO_ARCHIVE_ENABLED=true
ARCHIVE_AFTER_DAYS=180
ARCHIVE_BATCH_LIMIT=100

# Admin authentication defaults
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=@dminpanel
DEFAULT_ADMIN_DISPLAY_NAME=Administrator
AUTH_PASSWORD_SALT_ROUNDS=10
AUTH_SESSION_TTL_MINUTES=60
AUTH_SESSION_SWEEP_MINUTES=15

# Connection tuning (optional)
# CLUSTER_SERVER_SELECTION_TIMEOUT_MS=10000
# CLUSTER_MAX_POOL_SIZE=5
